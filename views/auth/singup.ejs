<%- include('../partials/header.ejs') %>

<div class="col-lg-6 mt-3 mx-auto" style="width: 100%;">
    <%- include('../partials/flash.ejs') %>
</div>

<div class="sing_page mx-auto border border-black p-2 px-3 rounded " >
    <div class="signup-info">
        <h2>Looks like you're new here!</h2>
        <p>Sign up with filling all required credentails to get started</p>
    </div>
    <div class="signup-form">
        <form action="/singup" method="POST">
        
            <h2 class="text-center  p-1">ðŸ”“SignUp</h2>
            <div class="mb-3">
                <label class="form-label" for="email">Email:</label>
                <input class="form-control" type="email" name="email" id="email" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="username">Username:</label>
                <input class="form-control" type="text" name="username" id="username" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="img">ProfileImage:</label>
                <input class="form-control" type="text" name="img" id="img" required>
            </div>
            <div class="mb-3">
                <p class="mb-2"><b>Want to register as?</b></p>
                <div classs="mx-2">
                    <label class="form-label" for="buyer">Buyer:</label>
                    <input type="radio" class="form-check-input" value="buyer" name="role" id="buyer">
                </div>
                <div classs="mx-2">
                    <label class="form-label" for="seller">Seller:</label>
                    <input type="radio" class="form-check-input" value="seller" name="role" id="seller">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password:</label>
                <input class="form-control" type="text" name="password" id="password" required>
            </div>
            <div class="text-center">
                <button class="btn btn-danger mt-3" type="submit">Request for signup</button>
                <p class="ft-light mt-2">Already have an account,<a href="/login">Login</a></p>
            </div>
        </form>
    </div>
</div>


<%- include('../partials/footer.ejs') %>





